<!doctype html>
<html class="no-js" lang="en">
<meta name="viewport" content="width=device-width, initial-scale=1.0">


<body class="template-color-5 font-family-02">

    <div class="main-wrapper wrapper-boxed_layout">
       
        <div class="quicky-content_wrapper pt-30 pb-30">
            <div class="container">
                <div class="row">  
                    <div>
                        <input id="search" />
                        <button onclick="search()">search</button>
                    </div>
                    <!--  class="product-content bg-snow" -->
                    <div class="col-lg-12 order-1 order-lg-2">
                        <div class="shop-product-wrap grid gridview-3 row">
                            @foreach (var item in Model)
                            {
                                <div class="col-8">
                                    <div class="product-item">
                                        <div class="product-img">
                                            <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                <img class="urun-image" src="@item.ProductImage">
                                            </a>
                                        </div>
                                        <div>
                                            <div class="product-desc_info">
                                                <h3 class="product-name text-center">
                                                    <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                        @item.ProductName
                                                    </a>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>


<script>
    function search() {
        $("tr").each(function (index, value) {
            if (index > 0 && !$(this).find("td")[0].innerText.includes($("#search").val())) {
                $(this).attr("hidden", true);
            } else {
                $(this).removeAttr("hidden");
            }
            console.log(value);
        })
    }
</script>
</html>