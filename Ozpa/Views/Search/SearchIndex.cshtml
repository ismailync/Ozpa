@using EntityLayer.Concrete
@model List<Product>
@{
    ViewData["Title"] = "SearchIndex";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<!doctype html>
<html class="no-js" lang="en">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div class="main-wrapper wrapper-boxed_layout">

    <div class="quicky-content_wrapper pt-30 pb-30">
        <div class="container">
            <div class="row">
                <div>
                    @using (Html.BeginForm("SearchIndex", "Search", FormMethod.Get))
                    {
                        <input type="text" name="searchText" id="searchText" placeholder="Ürün adını giriniz" />
                        <input type="submit" value="Arama" />
                    }
                </div>
                <!--  class="product-content bg-snow" -->
                <div class="col-lg-12 order-1 order-lg-2 mt-3">
                    <div class="shop-product-wrap grid gridview-3 row">
                        @foreach (var item in Model)
                        {
                            <div class="col-8">
                                <div class="product-item">
                                    <div class="product-img">
                                        <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                            <img class="urun-image" src="@item.ProductImage">
                                        </a>
                                    </div>
                                    <div>
                                        <div class="product-desc_info">
                                            <h3 class="product-name text-center">
                                                <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                    @item.ProductName
                                                </a>
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</html>