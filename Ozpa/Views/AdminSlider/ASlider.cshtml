@using EntityLayer.Concrete
@model List<Banner>
@{
    ViewData["Title"] = "ASlider";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Slider</h1>
<p>1873x780</p>
<br />
<a href="SliderAdd" class="btn btn-primary">Yeni Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Slider resim</th>
        <th>Category id</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a>
                    <img src="@item.BannerImage">
                </a>
            </td>
            <td>@item.CategoryId</td>
            <td><a href="/AdminSlider/EditSlider/@item.BannerId" class="btn btn-success">Düzenle</a></td>
            <td><a href="/AdminSlider/Delete/@item.BannerId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>
