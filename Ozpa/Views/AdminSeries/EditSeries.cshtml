@model EntityLayer.Concrete.Series

@{
    ViewData["Title"] = "EditSeries";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Seri düzenle</h1>
<br />

@using (Html.BeginForm("EditSeries", "AdminSeries", FormMethod.Post))
{
    @Html.Label("#")
    @Html.TextBoxFor(x => x.SeriesId, new { @class = "form-control", @readonly = "readonly" })
    <br />
    <br />
    @Html.Label("Seri resim")
    @Html.TextBoxFor(x => x.SeriesImage, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.SeriesImage)
    <br />
    <br />
    @Html.Label("Seri ad")
    @Html.TextBoxFor(x => x.SeriesName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.SeriesName)
    <br />
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-success">Güncelle</button>
}

