@model EntityLayer.Concrete.Series

@{
    ViewData["Title"] = "EditSeries";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Seri düzenle</h1>
<br />

@using (Html.BeginForm("EditSeries", "AdminSeries", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.SeriesId)
    @Html.Hidden("Path", (string)ViewBag.Path)
    @Html.Label("Seri resim")
    <br />
    <img src="@ViewBag.SeriesImage" width="400" height="200" />
    <br />
    <br />
    <input type="file" name="SeriesImage" />
    <br />
    @Html.ValidationMessageFor(x => x.SeriesImage)
    <br />
    <br />
    @Html.Label("Seri ad")
    @Html.TextBoxFor(x => x.SeriesName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.SeriesName)
    <br />
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.cv, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryId)
    <br />
    <br />
    <button class="btn btn-success">Güncelle</button>
}

