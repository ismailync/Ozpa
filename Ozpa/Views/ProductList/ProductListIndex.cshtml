@using EntityLayer.Concrete
@model CategoriesProducts
@{
    ViewData["Title"] = "ProductListIndex";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<!doctype html>
<html class="no-js" lang="en">
<meta name="viewport" content="width=device-width, initial-scale=1.0">


<body class="template-color-5 font-family-02">

    <div class="main-wrapper wrapper-boxed_layout">

        <!-- Begin Quicky's Content Wrapper Area -->
        <div class="quicky-content_wrapper pt-30 pb-30">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 order-2 order-lg-1 col-4">
                        <div class="quicky-sidebar-catagories_area">
                            <div class="quicky-sidebar_categories category-module">
                                <div class="quicky-sidebar_categories category-module">
                                    <div class="quicky-categories_title">
                                        <h5>Seriler</h5>
                                    </div>
                                    <div class="sidebar-categories_menu">
                                        <ul>
                                            @foreach (var item in Model.Categories)
                                            {
                                                <li><a href="/SeriesProduct/Index/@item.CategoryId/">@item.CategoryName</a></li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--  class="product-content bg-snow" -->
                    <div class="col-lg-10 order-1 order-lg-2">

                        <div class="shop-product-wrap grid gridview-3 row">


                            @foreach (var item in Model.PaginatedProducts.Results)
                            {
                                <div class="col-8">
                                    <div class="product-item">
                                        <div class="product-img">
                                            <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                <img class="urun-image" src="@item.ProductImage">
                                            </a>
                                        </div>
                                        <div>
                                            <div class="product-desc_info">
                                                <h3 class="product-name text-center">
                                                    <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                        @item.ProductName
                                                    </a>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="quicky-paginatoin-area">
                            <ul class="quicky-pagination-box">
                                @for (var p = 1; p <= Model.PaginatedProducts.PageCount; p++)
                                {
                                    var isActive = @p == @Model.PaginatedProducts.CurrentPage ? "active" : "";
                                    <li class=@isActive><a href="@Url.Action("ProductListIndex", new { pageId = p })">@p</a></li>
                                }

                                @*<li class="active"><a href="javascript:void(0)">1</a></li>
                                <li><a href="javascript:void(0)">2</a></li>
                                <li><a href="javascript:void(0)">3</a></li>
                                <li><a href="javascript:void(0)">4</a></li>
                                <li><a href="javascript:void(0)">5</a></li>
                                <li><a class="Next" href="javascript:void(0)">Next</a></li>*@
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
