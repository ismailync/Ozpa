        @*<div class="col-12  mt-5">
            <div class="section-title">
                <h3 class="heading">Ürünler</h3>
            </div>
        </div>*@
        <!-- Begin Quicky's Content Wrapper Area -->
        <div class="quicky-content_wrapper pt-30 pb-30">
            <div class="container">
                <div class="row">
                    <div class="quicky-sidebar_categories category-module">
                        <div class="quicky-categories_title">
                            <h5>Seriler</h5>
                        </div>
                        <div class="sidebar-categories_menu">
                            <ul>
                                @foreach (var item in Model.Categories)
                                {
                                    <li><a href="javascript:void(0)">@item.CategoryName</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                    <!--  class="product-content bg-snow" -->
                    <div class="col-lg-12 order-1 order-lg-2">

                        <div class="shop-product-wrap grid gridview-4 row">


                            @foreach (var item in Model.Products)
                            {
                                <div class="col-8">
                                    <div class="product-item">
                                        <div class="product-img">
                                            <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                <img class="urun-image" src="@item.ProductImage">
                                            </a>
                                        </div>
                                        <div>
                                            <div class="product-desc_info">
                                                <h3 class="product-name text-center">
                                                    <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                        @item.ProductName
                                                    </a>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
