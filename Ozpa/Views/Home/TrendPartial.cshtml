@using EntityLayer.Concrete
@model MainModel
    <!doctype html>
    <html class="no-js" lang="en">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <div class="latest-blog_area pt-95 pb-90">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <h4 class="heading">Trend Ürünler</h4>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="quicky-element-carousel product-slider" data-slick-options='{
                            "slidesToShow": 3,
                            "slidesToScroll": 1,
                            "infinite": false,
                            "arrows": false,
                            "dots": false,
                            "spaceBetween": 30
                            }' data-slick-responsive='[
                            {"breakpoint":992, "settings": {
                            "slidesToShow": 2
                            }},
                            {"breakpoint":768, "settings": {
                            "slidesToShow": 2
                            }},
                            {"breakpoint":480, "settings": {
                            "slidesToShow": 1
                            }}
                        ]'>
                        @foreach (var item in Model.Products)
                        {
                            if (item.ProductTrend == true)
                            {
                                <div class="blog-item">
                                    <div class="blog-img">
                                        <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                            <img src="@item.ProductImage" alt="Quicky's Blog">
                                        </a>
                                    </div>
                                    <div class="blog-content text-center">
                                        <h3 class="heading">
                                            <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                @item.ProductName
                                            </a>
                                        </h3>
                                    </div>
                                </div>
                            }

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</html>