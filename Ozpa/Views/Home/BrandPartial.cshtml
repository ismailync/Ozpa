@using EntityLayer.Concrete
@model MainModel
<div class="latest-blog_area pt-95 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h3 class="heading">Markalar</h3>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="quicky-element-carousel product-slider" data-slick-options='{
                            "slidesToShow": 3,
                            "slidesToScroll": 1,
                            "infinite": false,
                            "arrows": false,
                            "dots": false,
                            "spaceBetween": 30
                            }' data-slick-responsive='[
                            {"breakpoint":992, "settings": {
                            "slidesToShow": 2
                            }},
                            {"breakpoint":768, "settings": {
                            "slidesToShow": 2
                            }},
                            {"breakpoint":480, "settings": {
                            "slidesToShow": 1
                            }}
                        ]'>
                    @foreach (var item in Model.Brands)
                    {
                        <div class="blog-item">
                            <div class="blog-img">
                                <a href="/ProductList/ProductListIndex/@item.BrandId/">
                                    <img src="@item.BrandImage" alt="Quicky's Blog">
                                </a>
                            </div>
                            <div class="blog-content">
                                <h3 class="heading">
                                    <a href="/ProductList/ProductListIndex/@item.BrandId/">
                                        @item.BrandName
                                    </a>
                                </h3>
                            </div>
                        </div>
                    }



                </div>
            </div>
        </div>
    </div>
</div>
