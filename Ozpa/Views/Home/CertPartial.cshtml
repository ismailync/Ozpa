@using EntityLayer.Concrete
@model MainModel

<!doctype html>
<html class="no-js" lang="en">
<meta name="viewport" content="width=device-width, initial-scale=1.0">


<div class="latest-blog_area pt-95 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h4 class="heading">Güvenle Üretiyoruz</h4>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="quicky-element-carousel product-slider" data-slick-options='{
                            "slidesToShow": 6,
                            "slidesToScroll": 1,
                            "infinite": true,
                            "arrows": true,
                            "dots": false,
                            "spaceBetween": 10
                            }' data-slick-responsive='[
                            {"breakpoint":992, "settings": {
                            "slidesToShow": 2
                            }},
                            {"breakpoint":768, "settings": {
                            "slidesToShow": 2
                            }},
                            {"breakpoint":480, "settings": {
                            "slidesToShow": 1
                            }}
                        ]'>
                    @foreach (var item in Model.Certs)
                    {
                        <div class="blog-item">
                            <div class="blog-img">
                                <img src="@item.CertImage" @*alt="Quicky's Blog"*@>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
</html>
