@using EntityLayer.Concrete
@model MainModel
<div class="banner-area-7 pt-30 ml-6 mr-6 mb-3">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 mb-5">
                <div class="section-title">
                    <h3 class="heading">Seriler</h3>
                </div>
            </div>
            @foreach (var item in Model.Categories)
            {
                <div class="col-md-4">
                    <div class="banner-item">
                        <div class="banner-img">
                            <a href="/ProductList/ProductListIndex/@item.CategoryId/">
                                <img src="@item.CategorySeriesImage" alt="Quicky's Banner">
                            </a>
                        </div>
                    </div>
                    <div class="blog-content text-center">
                        <h3 class="heading">
                            <a href="/ProductList/ProductListIndex/@item.CategoryId/">
                                @item.CategoryName
                            </a>
                        </h3>
                    </div>
                </div>
            }

        </div>
    </div>
</div>