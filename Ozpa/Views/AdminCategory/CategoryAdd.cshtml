@model Ozpa.Models.AddCategoryImage
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori ekle</h1>
<br />

@using (Html.BeginForm("CategoryAdd", "AdminCategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <form method="post" enctype="multipart/form-data">
        @Html.HiddenFor(x => x.CategoryId)
        @Html.Hidden("Path", (string)ViewBag.Path)

        @Html.Label("Kategori adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)
        <br />
        <br />
        @Html.Label("Kategory resmi")
        <br />
        <input type="file" name="CategoryImage" />
        <br />
        @Html.ValidationMessageFor(x => x.CategoryImage)
        <br />
        <br />
        @Html.Label("Seri resmi")
        <br />
        <input type="file" name="CategorySeriesImage" />
        <br />
        @Html.ValidationMessageFor(x => x.CategorySeriesImage)
        <br />
        <br />
        @Html.Label("Seri")
        @Html.DropDownList("CategorySeries",
            new List<SelectListItem> {
                new SelectListItem {
                   Text="True",
                   Value="True",

                },
                new SelectListItem {
                   Text="False",
                   Value="False",
                },
            }, new { @class = "form-control" })
        <br />
        <br />
        <button class="btn btn-info">Kaydet</button>
    </form>
}

