@model EntityLayer.Concrete.Category
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori ekle</h1>
<br />

@using (Html.BeginForm("CategoryAdd", "AdminCategory", FormMethod.Post))
{
    @Html.Label("Kategori adı")
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryName)
    <br />
    <br />
    @Html.Label("Parent id")
    @Html.TextBoxFor(x => x.CategoryParentId, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.CategoryParentId)
    <br />
    <br />
    <button class="btn btn-info">Kaydet</button>
}

