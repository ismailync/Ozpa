@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "ACategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategoriler</h1>
<br />
<a href="CategoryAdd" class="btn btn-primary">Yeni Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Kategori id</th>
        <th>Kategori ad</th>
        <th>Parent kategori</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryParentId</td>
            <td><a href="#" class="btn btn-success">Düzenle</a></td>
            <td><a href="/AdminCategory/Delete/@item.CategoryId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>