    <div class="main-wrapper wrapper-boxed_layout">
        <div class="col-12 mt-5">
            <div class="section-title">
                <h3 class="heading">ÖZPA KOZMETİK</h3>
            </div>
        </div>
        <!-- Begin Banner With Text Area -->
        <div class="main-content_area mb-5 mt-5">
            <div class="banner-with_text overflow-hidden">
