@model EntityLayer.Concrete.Brand

@{
    ViewData["Title"] = "EditBrand";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Marka ekle</h1>
<br />

@using (Html.BeginForm("EditBrand", "AdminBrand", FormMethod.Post))
{
    @Html.Label("Marka adı")
    @Html.TextBoxFor(x => x.BrandName, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BrandName)
    <br />
    <br />
    @Html.Label("Marka resmi")
    @Html.TextBoxFor(x => x.BrandImage, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.BrandImage)
    <br />
    <br />
    <button class="btn btn-info">Kaydet</button>
}

