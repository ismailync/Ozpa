@using EntityLayer.Concrete
@model List<Brand>
@{
    ViewData["Title"] = "ABrand";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Markalar</h1>
<p>350x300</p>
<br />
<a href="BrandAdd" class="btn btn-primary">Yeni Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Marka adı</th>
        <th>Marka resim</th>
        <th>Marka banner resim</th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BrandName</td>
            <td>
                <a>
                    <img src="@item.BrandImage">
                </a>
            </td>
            <td>
                <a>
                    <img src="@item.BrandBannerImage">
                </a>
            </td>
            <td><a href="/AdminBrand/EditBrand/@item.BrandId" class="btn btn-success">Düzenle</a></td>
            <td><a href="/AdminBrand/Delete/@item.BrandId" class="btn btn-danger">Sil</a></td>
        </tr>
    }
</table>

