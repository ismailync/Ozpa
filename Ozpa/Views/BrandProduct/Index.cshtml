@using EntityLayer.Concrete
@model Brand
@{
    ViewData["Title"] = "ProductListIndex";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<!doctype html>
<html class="no-js" lang="en">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<body class="template-color-5 font-family-02">

    <div class="main-wrapper wrapper-boxed_layout">
        <div class="breadcrumb-area" style="background-image: url(@Model.BrandBannerImage); margin-bottom:40px;">
            <div class="container">
                <div class="breadcrumb-content">
                </div>
            </div>
        </div>
        <!-- Begin Quicky's Content Wrapper Area -->
        <div class="quicky-content_wrapper pt-30 pb-30">
            <div class="container">
                <div class="row">
                    @*<div class="col-lg-2 order-2 order-lg-1 col-4">
                            <div class="quicky-sidebar-catagories_area">
                                <div class="quicky-sidebar_categories category-module">
                                        <dl>
                                            <dt>Coffee</dt>
                                            <dd>black hot drink</dd>
                                        </dl>
                                    </div>
                            </div>
                        </div>*@
                    <!--  class="product-content bg-snow" -->
                    <div class="col-lg-12 order-1 order-lg-2">
                        <div class="shop-product-wrap grid gridview-4 row">
                            @foreach (var item in Model.Products)
                            {
                                <div class="col-8">
                                    <div class="product-item">
                                        <div class="product-img">
                                            <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                <img class="urun-image" src="@item.ProductImage">
                                            </a>
                                        </div>
                                        <div>
                                            <div class="product-desc_info">
                                                <h3 class="product-name text-center">
                                                    <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                        @item.ProductName
                                                    </a>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
