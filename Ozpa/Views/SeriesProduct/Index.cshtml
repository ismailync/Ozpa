@using EntityLayer.Concrete
@model CategoriesProducts
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!doctype html>
<html class="no-js" lang="en">
<meta name="viewport" content="width=device-width, initial-scale=1.0">


<body class="template-color-5 font-family-02">

    <div class="main-wrapper wrapper-boxed_layout">

        <!-- Begin Quicky's Content Wrapper Area -->
        <div class="quicky-content_wrapper pt-30 pb-30">
            <div class="container">
                <div class="row">
                    @foreach (var item in Model.Categories)
                    {
                    <div class="breadcrumb-area" style="background-image: url(@item.CategoryImage); margin-bottom:40px;">
                        <div class="container">
                            <div class="breadcrumb-content">
                            </div>
                        </div>
                    </div>
                    }
                    <!--  class="product-content bg-snow" -->
                    <div class="col-lg-12 order-1 order-lg-2">

                        <div class="shop-product-wrap grid gridview-2 row">


                            @foreach (var item in Model.Products)
                            {
                                <div class="col-8">
                                    <div class="product-item">
                                        <div class="product-img">
                                            <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                <img class="urun-image" src="@item.ProductImage">
                                            </a>
                                        </div>
                                        <div>
                                            <div class="product-desc_info">
                                                <h3 class="product-name text-center">
                                                    <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                        @item.ProductName
                                                    </a>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
