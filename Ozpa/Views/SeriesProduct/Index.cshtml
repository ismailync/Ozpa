@using EntityLayer.Concrete
@model CategoriesProducts
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<!doctype html>
<html class="no-js" lang="en">
<meta name="viewport" content="width=device-width, initial-scale=1.0">


<body class="template-color-5 font-family-02">

    <div class="main-wrapper wrapper-boxed_layout">
        <div class="slider-area">

            <div class="quicky-element-carousel home-slider arrow-style" data-slick-options="slidesToShow" : 1>
                @foreach (var item in Model.Categories)
                {
                    <div class="slide-item animation-style-01 bg-1 " style="min-height: 0px">
                        @*<div class="slider-progress"></div>*@
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="inner-slide">
                                        <div>
                                            <img src="@item.CategoryImage">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>

        </div>
        <!-- Begin Quicky's Content Wrapper Area -->
        <div class="quicky-content_wrapper pt-30 pb-30">
            <div class="container">
                <div class="row">
                    @*<div class="col-lg-2 order-2 order-lg-1 col-4">
                        <div class="quicky-sidebar-catagories_area">
                            <div class="quicky-sidebar_categories category-module">
                                <div class="quicky-sidebar_categories category-module d-none d-lg-block">
                                    <div class="quicky-categories_title">
                                        <h5>Ürünler</h5>
                                    </div>
                                    <div class="sidebar-categories_menu">
                                        <ul>
                                            @foreach (var item in Model.Categories.Distinct<Category>())
                                            {
                                                <li><a href="/SeriesProduct/Index/@item.CategoryId/">@item.CategoryName</a></li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>*@
                    <!--  class="product-content bg-snow" -->
                    <div class="col-lg-12 order-1 order-lg-2">

                        <div class="shop-product-wrap grid gridview-3 row">


                            @foreach (var item in Model.Products)
                            {
                                <div class="col-4">
                                    <div class="product-item">
                                        <div class="product-img">
                                            <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                <img class="urun-image" src="@item.ProductImage">
                                            </a>
                                        </div>
                                        <div>
                                            <div class="product-desc_info">
                                                <h3 class="product-name text-center">
                                                    <a href="/ProductList/ProductDetailsIndex/@item.ProductId/">
                                                        @item.ProductName
                                                    </a>
                                                </h3>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
