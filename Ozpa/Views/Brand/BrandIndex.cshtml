@model IEnumerable<EntityLayer.Concrete.Brand>
@{
    ViewData["Title"] = "BrandIndex";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<!doctype html>
<html class="no-js" lang="en">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<!-- Begin Letest Blog Area -->
<body class="template-color-5 font-family-02">
    <div class="main-wrapper wrapper-boxed_layout">
        <div class="latest-blog_area pt-60 pb-90">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <h3 class="heading">Markalar</h3>
                        </div>
                    </div>
                    <div class="quicky-content_wrapper pt-30 pb-30">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12 order-1 order-lg-2">
                                    <div class="shop-product-wrap grid gridview-3 row">
                                        @foreach (var item in Model)
                                        {
                                            <div class="col-8  mt-3">
                                                <div class="product-item">
                                                    <div class="single-product">
                                                        <div class="product-img">
                                                            <a href="/BrandProduct/Index/@item.BrandId">
                                                                <img src="@item.BrandImage">
                                                            </a>
                                                        </div>
                                                        <div>
                                                            <div class="product-desc_info">
                                                                <h3 class="product-name text-center">
                                                                    <a href="/BrandProduct/Index/@item.BrandId">
                                                                        @item.BrandName
                                                                    </a>
                                                                </h3>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
<!-- Letest Blog Area End Here -->
</html>